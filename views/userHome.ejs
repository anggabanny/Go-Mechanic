<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <%- include('partials/css') %>
</head>
    <%- include('partials/headerAdmin') %>
   
<body id="page-top" style="background-color:#272727"; width: 100%;">
  <div class="container" >
  <br>
  <br>
  <section id="about" class="registration-section text-center" style="margin-top: 15%;margin-bottom: 15%;background-color: white; height: 300px;padding-top: 10px;">
      <div class="container" style="width: 30%; height: 100%; margin-top: 3%;" ;">
            <h4 class="text-uppercase m-0" style="color: black;">Input Tanggal</h4>
            <form method="POST" style="margin-top: 50px;">
                <input id="datepicker" width="276" name='date'/>
                <input type="submit" class="btn btn-primary mx-auto" style="margin-top: 30px;" value="Cari Sekarang">
            </form>
      </div>
  </section>
    <div class="overflow-auto" style="justify-content: center; margin-bottom: 300px;">
        <table class="table table-striped table-dark">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Customer Name</th>
                <th scope="col">Service Details</th>
                <th scope="col">Mechanic</th>
                <th scope="col">Options</th>
                <th scope="col">Status</th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach(database=>{ %>
              <tr>
                  <th> <%= database.id %></th>
                  <td> <%= database.User.name ? database.User.userRole() : '' %> %></td>
                  <td><%= database.Service ? UserServiceMechanic.detail(database.Service,database) : '' %></td>
                  <td><%= database.Mechanic ? database.Mechanic.name : '' %></td>
                  <td><a href="/admin/<%= database.id%>/delete">delete</a>
                    <% if(database.status === false){ %>
                      <td> <button onclick="window.location.href = '/admin/<%= database.id%>/done';" style="padding: 0.25rem 0.5rem; letter-spacing: 0rem;" type="button" class="btn btn-warning">on process</button></td>
                    <% }else{ %>
                      <td> <button onclick="window.location.href = '/admin/<%= database.id%>/process';"style="padding: 0.25rem 2rem; letter-spacing: 0rem;" type="button" class="btn btn-success">done</button></td>
                      <% } %>
              </tr>
              <% })%>
            </tbody>
          </table>
  </div>
  
  <script>
    $('#datepicker').datepicker();
  </script>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  
  <!-- Plugin JavaScript -->
  <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/grayscale.min.js"></script>
  <script src="js/script.js"></script>
</body>
</html>
